@{ ViewData["Title"] = "Dashboard"; }
<div class="container">
    
    <h1>Hello @ViewBag.User.FirstName @ViewBag.User.LastName</h1>
  
    <div class="col-lg-12">
        <h2>Activities:</h2>
        <table class="table table-hover">
        <tr>
            <th>ACTIVITY</th>
            <th>DATE & TIME</th>
            <th>DURATION</th>
            <th>EVENT COORDINATOR</th>
            <th># OF PARTICIPANTS</th>
            <th>ACTIONS</th>
        </tr>
        
            @{ foreach (var act in @ViewBag.AllActivities){
                <tr>
                <td><a href="/ShowOne/@act.ActivityId/@ViewBag.User.UserId">@act.ActivityName</a></td>
                <td>@act.ActivityDate.ToString("MMM dd, yyyy")at @act.ActivityTime.ToString("h:mm tt")</td>
                <td>@act.ActivityDuration</td>
                <td>@act.ActivityCreator.FirstName</td>
    
                <td>@act.ActivityJoiner.FirstName</td>
                
                    @if( @act.ActivityCreatorId == @ViewBag.User.UserId){
                    <td><a href="/Delete/@act.ActivityId">DELETE</a></td>
                }
                else{
                    <td><a href="/Join/@act.ActivityId">JOIN</a></td>
                }
                </tr>
            }}
    </table>
    </div>
    <a href="/AddActivity"><button class="btn">ADD ACTIVITY</button></a>

</div>
    
