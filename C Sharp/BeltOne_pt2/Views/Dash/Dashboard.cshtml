@{ ViewData["Title"] = "Dashboard"; }
<div class="container">
    <h1>Hello @ViewBag.User.FirstName @ViewBag.User.LastName</h1>
    <div class="alert alert-danger">
        EDITS:
        <ul>
            <li>Display Friends list</li>
            <li>Display Pending Invites list</li>
            <li>Accept Invite: Should add the person to the Friends table and disappear from Pending Invite list</li>
            <li>Ignore Inite: Should delete Pending Invite and name will disappear from Pending Invites. Their name should reappear in All Users page</li>
        </ul>
    </div>
    <div class="col-lg-10">
        <h2>Your Description:</h2>
        @ViewBag.User.Description
    </div>
    <div class="col-lg-12">
        <h2>Your Professional Network:</h2>
        <table class="table table-hover">
        <tbody>
            <tr>
                <th>Name</th>
            </tr>
            @{ foreach( var friend in @ViewBag.FriendList){
            <tr>
                <td>@friend.FirstName</td>
            </tr>
            }}
        </tbody>
    </table>
    </div>
     <div class="col-lg-12">
        <h2>Your Pending Invitations:</h2>
        <table class="table table-hover">
            <tr>
                <th>Name</th>
                <th>Accept</th>
                <th>Ignore</th>
            </tr>
        <tbody>
            { foreach( var invite in ViewBag.InviteList){
            <tr>
                <td>invite.FirstName</td>
                <td>ACCEPT</td>
                <td>IGNORE</td>
            </tr>
            }}
        </tbody>
    </table>
    </div>

        </tbody>
    </table>
    </div>
</div>
    
