@{ ViewData["Title"] = "Dashboard"; }
<div class="container">
    <h1>Hello @ViewBag.User.FirstName @ViewBag.User.LastName</h1>
  
    <div class="col-lg-10">
        <h2>Your Description:</h2>
        @ViewBag.User.Description
    </div>
    <div class="col-lg-12">
        <h2>Your Professional Network:</h2>
        <table class="table table-hover">
        <tbody>
            <tr>
                <th>Name</th>
            </tr>
            @{ foreach( var friend in @ViewBag.FriendList){
            <tr>
                <td>@friend.InviteSentFrom.FirstName @friend.InviteSentFrom.LastName</td>
            </tr>
            }}
        </tbody>
    </table>
    </div>
     <div class="col-lg-12">
        <h2>Your Pending Invitations:</h2>
        <table class="table table-hover">
            <tr>
                <th>Name</th>
                <th>Accept</th>
                <th>Ignore</th>
            </tr>
        <tbody>
       
            <tr>
                <td>Name</td>
                <td>ACCEPT</td>
                <td>IGNORE</td>
            </tr>
        
        </tbody>
    </table>
    </div>

        </tbody>
    </table>
    </div>
</div>
    
