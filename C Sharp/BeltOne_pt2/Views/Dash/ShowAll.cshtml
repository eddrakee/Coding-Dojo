@{ ViewData["Title"] = "All Users"; }

<div class="container">
    <h1>Hello @ViewBag.User.FirstName @ViewBag.User.LastName</h1>
    <h2>List of All Users</h2>


    <div class="col-lg-12">
        <h2>Your Professional Network:</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ foreach( var user in @ViewBag.AllUsersMinusMe){
                <tr>
                    @{bool sent = false;} 
                        @foreach( var a in @user.InviteInvitesReceived){ 
                            if(@a.InviteSentFromId == @ViewBag.User.UserId){
                                sent = true;
                            }
                            } @if(@sent == false){
                    <td><a href="/Profile/@user.UserId">@user.FirstName @user.LastName</a></td>
                    <td><a href="/AddInvite/@user.UserId">CONNECT</a></td>
                    }

                </tr>

                } }
            </tbody>
        </table>
    </div>
</div>