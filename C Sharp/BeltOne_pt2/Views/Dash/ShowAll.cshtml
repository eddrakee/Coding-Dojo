@{ ViewData["Title"] = "All Users"; }

<div class="container">
    <h1>Hello @ViewBag.User.FirstName @ViewBag.User.LastName</h1>
    <h2>List of All Users</h2>

    <div class="alert alert-danger">
        EDITS:
        <ul>
            <li>Need to sort out all users who are friends and have already sent invites</li>
            <li>Also sort out those who Logged In User has Invited</li>
        </ul>
    </div>

    <div class="col-lg-12">
        <h2>Your Professional Network:</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ foreach( var user in @ViewBag.AllUsers){
                <tr>
                    <td><a href="/Profile/@user.UserId">@user.FirstName @user.LastName</a></td>
                    <td><a href="/AddFriend">CONNECT</a></td>
                </tr>

                } }
            </tbody>
        </table>
    </div>
</div>